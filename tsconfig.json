{
  "compilerOptions": {
    "target": "es6",
    "types": [
      "node"
    ],
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "./",
    "baseUrl": "./",
    "allowJs": false,
    "esModuleInterop": false,
    "removeComments": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "inlineSourceMap": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist"
  ]
}
